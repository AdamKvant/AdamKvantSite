{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
    { "source": "/experience", "function": "ssr" },
    { "source": "**", "destination": "/index.html" }
    ],
    "headers": [
      {
        "source": "/build/*.css",
        "headers": [
          { "key": "Cache-Control", "value": "public,max-age=31536000,immutable" }
        ]
      }
    ]
  }
}
